// 打开确认对话框
function showConfirm(obj) {
  return new Promise(function (resolve, reject) {
    confirm({
      title: obj ? obj.title : '登录信息失效提示',
      content: obj ? obj.content : '登录信息失效，请重新登录',
      onOk: function onOk() {
        resolve('1');
      },
      onCancel: function onCancel() {
        resolve('2');
      }
    });
  });
}